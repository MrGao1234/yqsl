<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zgjt.yqsl.mapper.GoodsTypeMapper">
    <resultMap id="findGoodsTypeBySelf" type="com.zgjt.yqsl.entity.GoodsType">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <collection property="childList" column="id" select="findChildGoodsType"></collection>
    </resultMap>

    <select id="findGoodsType" resultMap="findGoodsTypeBySelf">
        select id, name, parent_id from goods_type where parent_id = 0 and is_deleted = 0
    </select>

    <select id="findChildGoodsType" resultMap="findGoodsTypeBySelf">
        select id, name, parent_id from goods_type where parent_id = #{id} and is_deleted = 0
    </select>
</mapper>
